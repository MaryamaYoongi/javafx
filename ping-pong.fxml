<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Group xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" onKeyPressed="#keyPressedHandler"
       focusTraversable="true" fx:controller="pingPong.controller.Controller">
    <children>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#b6dafc" height="600.0" layoutX="0" stroke="BLACK"
                   strokeType="INSIDE" width="1100.0" fx:id="field"/>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#6326ae" height="150.0" layoutX="3.0" layoutY="225.0"
                   stroke="BLACK" strokeType="INSIDE" width="20.0" fx:id="kidPlayer"/>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#6326ae" height="150.0" layoutX="1077.0" layoutY="225.0"
                   stroke="BLACK" strokeType="INSIDE" width="20.0" fx:id="compPlayer"/>
        <Circle fill="DODGERBLUE" layoutX="550.0" layoutY="300.0" radius="25.0" stroke="BLACK" strokeType="INSIDE"
                fx:id="ball"/>
        <Text fill="BLACK" strokeType="INSIDE" strokeWidth="0.0" text="0 : 0" textAlignment="CENTER" layoutX="510"
              layoutY="30" wrappingWidth="66.33984375" fx:id="score">
            <font>
                <Font size="36.0"/>
            </font>
        </Text>
        <Text fill="#AE1821" strokeType="INSIDE" strokeWidth="0.0" text="" textAlignment="CENTER" layoutX="150"
              layoutY="500" wrappingWidth="800" fx:id="gameOver">
            <font>
                <Font size="130.0"/>
            </font>
        </Text>
    </children>
</Group>

